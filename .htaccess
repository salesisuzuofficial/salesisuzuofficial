# =====================================
# üîí SECURITY CONFIG FOR SALES Isuzu SITE (FINAL)
# =====================================

# 1Ô∏è‚É£ Nonaktifkan directory listing
Options -Indexes

# 2Ô∏è‚É£ Aktifkan Rewrite Engine dan paksa HTTPS
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3Ô∏è‚É£ Blokir akses ke file sensitif (diperbaiki)
<FilesMatch "(^\.|config\.php|koneksi\.php)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Izinkan file login & proses login
<FilesMatch "(cek_login\.php|proses_login\.php|hapus_.*\.php|edit_.*\.php|tambah_.*\.php)">
    Order allow,deny
    Allow from all
</FilesMatch>

# 4Ô∏è‚É£ Cegah eksekusi PHP di folder upload
RewriteCond %{REQUEST_URI} ^/admin/api/uploads [NC]
RewriteCond %{REQUEST_FILENAME} \.(php|php3|php4|php5|phtml|html|htm)$ [NC]
RewriteRule .* - [F,L]

# 5Ô∏è‚É£ Lindungi file konfigurasi & sistem
<FilesMatch "(composer\.json|composer\.lock|package\.json|yarn\.lock|\.env|\.git|\.htpasswd)">
    Order allow,deny
    Deny from all
</FilesMatch>

# 6Ô∏è‚É£ Cegah file berbahaya di-upload
<FilesMatch "\.(phps|php5|phtml|exe|sh|bat|pl|py|jsp|asp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# 7Ô∏è‚É£ Lindungi hanya folder upload agar PHP tidak dieksekusi
<Directory "admin/api/uploads">
    <FilesMatch "\.(php|php3|php4|php5|phtml|phps)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

# 8Ô∏è‚É£ Proteksi file .htaccess
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# 9Ô∏è‚É£ Blokir query mencurigakan (LFI, RFI, command injection)
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|/etc/passwd|/bin/bash|base64_encode|eval\(|system\(|shell_exec\() [NC]
RewriteRule .* - [F,L]

# üîü Blok referer spam & user-agent bot scanner
SetEnvIfNoCase Referer "semalt\.com" bad_ref=1
SetEnvIfNoCase Referer "buttons\-for\-website" bad_ref=1
SetEnvIfNoCase Referer "darodar\.com" bad_ref=1
SetEnvIfNoCase Referer "crawler" bad_ref=1
SetEnvIfNoCase Referer "scan" bad_ref=1
Order allow,deny
Allow from all
Deny from env=bad_ref

BrowserMatchNoCase "curl" bad_bot
BrowserMatchNoCase "wget" bad_bot
BrowserMatchNoCase "python" bad_bot
BrowserMatchNoCase "nikto" bad_bot
BrowserMatchNoCase "fimap" bad_bot
BrowserMatchNoCase "sqlmap" bad_bot
Order allow,deny
Allow from all
Deny from env=bad_bot

# 11Ô∏è‚É£ Blok IP mencurigakan (bisa ditambah nanti)
<Limit GET POST>
    Order Allow,Deny
    Allow from all
    Deny from 45.146.165.0/24
    Deny from 185.220.100.0/22
    Deny from 91.240.118.0/23
</Limit>

# 12Ô∏è‚É£ Header keamanan tambahan
<IfModule mod_headers.c>
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# 13Ô∏è‚É£ Cegah hotlink gambar
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https://(www\.)?salesisuzuofficial\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,L]

# 14Ô∏è‚É£ Cache control (optional untuk kecepatan)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresDefault "access plus 3 days"
</IfModule>

# =============================
# üîí PROTEKSI UNTUK robots.txt
# =============================
<Files "robots.txt">
    # Hanya izinkan bot resmi (Google, Bing, Yandex, DuckDuck)
    SetEnvIfNoCase User-Agent "Googlebot" allowed_bot
    SetEnvIfNoCase User-Agent "Googlebot-Image" allowed_bot
    SetEnvIfNoCase User-Agent "Bingbot" allowed_bot
    SetEnvIfNoCase User-Agent "YandexBot" allowed_bot
    SetEnvIfNoCase User-Agent "DuckDuckBot" allowed_bot

    Order deny,allow
    Deny from all
    Allow from env=allowed_bot

    # Fallback jika ditolak ‚Äî tetap arahkan ke robots.txt (agar tidak error di Google)
    ErrorDocument 403 /robots.txt
</Files>

# ============================================
# üö´ BLOKIR LINK MALWARE DETAIL FIX (HTACCESS)
# ============================================

# Blok semua request yang mengandung "index.php?detail/"
RewriteCond %{THE_REQUEST} \?detail/ [NC,OR]
RewriteCond %{QUERY_STRING} detail/ [NC,OR]
RewriteCond %{REQUEST_URI} index\.php\?detail/ [NC,OR]
RewriteCond %{REQUEST_URI} /detail/ [NC]
RewriteRule .* - [G,L]

# =============================
# üåê HILANGKAN .PHP DARI URL
# =============================

# Aktifkan rewrite
RewriteEngine On
RewriteBase /

# Jika file atau folder tidak ada, tapi ada file .php dengan nama sama,
# maka tampilkan file .php itu
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# Redirect dari versi .php ke versi tanpa .php (biar SEO konsisten)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]
