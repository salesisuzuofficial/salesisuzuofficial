# ============================
# üîí SECURITY CONFIG FINAL
# ============================

Options -Indexes

RewriteEngine On
RewriteBase /

# Paksa HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Blokir akses file sensitif
<FilesMatch "(^\.|config\.php|koneksi\.php|composer\.json|composer\.lock|package\.json|yarn\.lock|\.env|\.git|\.htpasswd)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Lindungi file berbahaya
<FilesMatch "\.(phps|php5|phtml|exe|sh|bat|pl|py|jsp|asp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteksi .htaccess
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Blokir query injection
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|/etc/passwd|/bin/bash|base64_encode|eval\(|system\(|shell_exec\() [NC]
RewriteRule .* - [F,L]


# -------------------
# üöÄ REMOVE .PHP FROM URL
# -------------------

# Jalankan file .php secara otomatis
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)$ $1.php [L]

# Redirect dari .php ke tanpa .php (SEO friendly)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]


# -------------------
# üõ°Ô∏è Security Headers
# -------------------
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# -------------------
# ‚ö° Caching
# -------------------
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresDefault "access plus 3 days"
</IfModule>